   <content>
      <VBox alignment="BOTTOM_CENTER" prefHeight="499.0" prefWidth="381.0" spacing="10.0">
         <children>
            <ImageView fx:id="movieCardImage" fitHeight="249.0" fitWidth="316.0" pickOnBounds="true" preserveRatio="true" />
