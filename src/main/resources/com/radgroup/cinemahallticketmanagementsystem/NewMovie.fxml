            <HBox alignment="CENTER" prefHeight="27.0" prefWidth="349.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Movie ID" wrappingWidth="85.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Text>
                  <TextField fx:id="newMovieIdField" layoutX="257.0" layoutY="11.0" prefHeight="26.0" prefWidth="254.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="27.0" prefWidth="349.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Movie Name" wrappingWidth="85.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Text>
                  <TextField fx:id="newMovieNameField" prefHeight="26.0" prefWidth="254.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="27.0" prefWidth="349.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Duration" wrappingWidth="85.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Text>
                  <TextField fx:id="newDurationField" prefHeight="26.0" prefWidth="254.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="27.0" prefWidth="349.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Price" wrappingWidth="85.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Text>
                  <TextField fx:id="newTicketPriceField" prefHeight="26.0" prefWidth="254.0" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#addNewMovie" prefWidth="180.0" text="Add" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
